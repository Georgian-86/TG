# ============================================
# Teach-Genie Production Environment Variables
# ============================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Security (REQUIRED - generate secure random values)
SECRET_KEY=your-secure-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (REQUIRED - PostgreSQL for production)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# OpenAI API (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key

# Email - Resend (REQUIRED for email verification)
EMAIL_API_KEY=re_your-resend-api-key
EMAIL_FROM=info@yourdomain.com

# Google OAuth (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/auth/google/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://yourdomain.com

# Redis Cache (Recommended for production)
# REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=10
